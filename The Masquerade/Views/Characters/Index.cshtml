@model IEnumerable<The_Masquerade.Models.Character>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Player</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.Player_id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clan)
        </th>
        <th class="nophone">
            @Html.DisplayNameFor(model => model.Experience_Points)
        </th>
        <th class="nophone">
            @Html.DisplayNameFor(model => model.Player.Full_Name)
        </th>
        <th class="nophone">
            @Html.DisplayNameFor(model => model.Story)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clan)
        </td>
        <td class="nophone">
            @Html.DisplayFor(modelItem => item.Experience_Points)
        </td>
        <td class="nophone">
            @Html.DisplayFor(modelItem => item.Player.Full_Name)
        </td>
        <td class="nophone">
            @Html.DisplayFor(modelItem => item.Story.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.System_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.System_id }) |
            @Html.ActionLink("History", "Hystory", new { id = item.System_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.System_id })
        </td>
    </tr>
}
</table>
<p>
    @Html.ActionLink("Back to Index", "Narrator", "Administration")
</p>
